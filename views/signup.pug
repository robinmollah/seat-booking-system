h1 Sign Up
div(style="font-size: 2em;")
	span Name
	br
	input#idName(name="name" type="name")
	br
	span SID:
	br
	input#idSid(name="sid" type="number")
	br
	span Email
	br
	input(id="idEmail" name="email" type="email")
	br
	span Password
	br
	input(id="idPassword" name="password" type="password")
	br
	button#idSignup Signup

style.
	input {
		height: 2.5em;
		width: 50%;
	}


script.
	document.getElementById("idSignup").addEventListener("click", (event) => {
		const email = document.getElementById("idEmail").value;
		const password = document.getElementById("idPassword").value;
		const name = document.getElementById("idName").value;
		const sid = document.getElementById("idSid").value;


		fetch('http://127.0.0.1:3002/api/signup', {
			method: 'POST',
			headers: {
				'Accept': 'application/json',
				'Content-Type': 'application/json'
			},
			body: JSON.stringify({email, password, name, sid})
		}).then(res => res.json()).then(
			res => {
				if(res.success){
					window.location = "/";
				}
			});
	});
